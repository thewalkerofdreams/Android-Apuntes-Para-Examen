<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImageViewBaloncescista01"
        android:layout_width="100sp"
        android:layout_height="100sp"></ImageView>

    <LinearLayout
        android:id="@+id/Linear01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextNombreBaloncescista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"></TextView>

        <TextView
            android:id="@+id/TextPuntoPorPartido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"></TextView>

        <TextView
            android:id="@+id/TextRebotesPorPartido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"></TextView>

        <TextView
            android:id="@+id/TextAsistenciasPorPartido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"></TextView>
    </LinearLayout>

</LinearLayout>